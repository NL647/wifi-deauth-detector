<!DOCTYPE html>
<html lang="en">
<meta http-equiv="refresh" content="60;URL=/dashboard">

<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>

    <!-- CSS (load bootstrap from a CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</head>




<body class="container">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Dashboard Wifi Deauth Monitor</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="table-responsive-sm">

            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Router MAC</th>
                        <th>OUI</th>
                        <th>Router Brand</th>
                        <th>Victim MAC</th>
                        <th>Victim Brand</th>
                        <th>OUI</th>
                        <th>Signal Strength</th>
                        <th>Channel Flag</th>
                        <th>Packet Length</th>
                        <th>Attack Type</th>
                    </tr>
                </thead>
                <tbody>
                    <% attacks.forEach(function(attack) { %>
                        <tr>
                            <td>
                                <%= moment(attack.timestamp).format('LLLL') %>
                            </td>
                            <td>
                                <%= attack.router %>
                            </td>
                            <td>
                                <%= attack.routerInfo.oui %>
                            </td>
                            <td>
                                <%= attack.routerInfo.company_name %>
                            </td>
                            <td>
                                <%= attack.victim %>
                            </td>
                            <td>
                                <%= attack.victimInfo.company_name %>
                            </td>
                            <td>
                                <%= attack.victimInfo.oui %>
                            </td>
                            <td>
                                <%= attack.signalStrength %>
                            </td>
                            <td>
                                <%= attack.channelFlags %>
                            </td>
                            <td>
                                <%= attack.packetLength %>
                            </td>
                            <td>
                                <%= attack.type %>
                            </td>
                            <td><button><a href="">Delete</a></button></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </main>
</body>

<html>